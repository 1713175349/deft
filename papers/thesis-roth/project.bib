@article{ Forte11,
Author = {Forte, Esther and Llovell, Felix and Vega, Lourdes F. and Trusler, J. P.
   Martin and Galindo, Amparo},
Title = {{Application of a renormalization-group treatment to the statistical
   associating fluid theory for potentials of variable range (SAFT-VR)}},
